---
import GlobalFooter from "@/components/globals/footer";
import GlobalHeader from "@/components/globals/header"

import "@/styles/globals.css"

export interface Props {
  title?: string;
}

const { title = "메인" } = Astro.props;
---

<!doctype html>
<html lang="ko">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - 아르카디아 브랜드 리소스 센터</title>
	</head>
	<body class="bg-background text-foreground">
		<GlobalHeader client:load/>
		<slot />
		<GlobalFooter client:load/>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
