---
export interface Props {
  imageSrc: string;
  imageAlt: string;
  warningText: string;
}

const { imageSrc, imageAlt, warningText } = Astro.props;
---

<div class="w-full h-40 overflow-hidden flex items-center md:h-auto group relative">
  <div class="bg-red-500/60 w-full absolute top-0 left-0 h-full flex items-center justify-center cursor-not-allowed font-bold opacity-0 hover:opacity-100 transition-opacity duration-400 ease-in-out">
    <h4 class="translate-y-10 group-hover:translate-y-0 opacity-0 group-hover:opacity-100 transition-all duration-400 ease-in-out">
      {warningText}
    </h4>
  </div>
  <img src={imageSrc} alt={imageAlt} />
</div> 